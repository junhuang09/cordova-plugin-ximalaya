<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-ximalaya" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>ximalaya</name>
    <js-module name="ximalaya" src="www/ximalaya.js">
        <clobbers target="cordova.plugins.ximalaya"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="ximalaya">
                <param name="android-package" value="com.cordova.plugins.ximalaya"/>
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
        </config-file>

        <source-file src="src/android/ximalaya.java" target-dir="src/com/cordova/plugins/ximalaya"/>

        <source-file src="libs/android/armeabi/libxmediaplayerv7.so" target-dir="libs/armeabi" />
        <source-file src="libs/android/armeabi/libsoundtouch.so" target-dir="libs/armeabi" />
        <source-file src="libs/android/armeabi/libxmediaplayer.so" target-dir="libs/armeabi" />
        <source-file src="libs/android/armeabi/libxmediaplayer_x.so" target-dir="libs/armeabi" />
        <source-file src="libs/android/armeabi/libxmediaplayerv7.so" target-dir="libs/armeabi" />
        <source-file src="libs/android/armeabi/libxmopendatacrypto.so" target-dir="libs/armeabi" />

        <source-file src="libs/android/arm64-v8a/libmediadatacryto.so" target-dir="libs/arm64-v8a" />

        <source-file src="libs/android/gson-2.8.0.jar" target-dir="libs" />
        <source-file src="libs/android/okhttp-3.3.1.jar" target-dir="libs" />
        <source-file src="libs/android/okio-1.8.0.jar" target-dir="libs" />
        <source-file src="libs/android/TingPhoneOpenSDK_5.6.12.jar" target-dir="libs" />
        <source-file src="libs/android/XmDownload_1.6.jar" target-dir="libs" />
        <source-file src="libs/android/XmlyOAuth2SDK_V1.5.jar" target-dir="libs" />


        <source-file src="res/android/drawable/next_play_selector_transparent.xml" target-dir="res/drawable" />

    </platform>
</plugin>